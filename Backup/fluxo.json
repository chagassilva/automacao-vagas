{
  "name": "Drive Monitor → Download → Gmail",
  "nodes": [
    {
      "parameters": {
        "resource": "file",
        "operation": "list",
        "folderId": "1JCevfwkscJxn4_hN25mdUyhIGD6FUgZC",
        "returnAll": false,
        "options": {
          "orderBy": "createdTime desc",
          "limit": 1
        },
        "triggerOn": "fileCreated"
      },
      "name": "Drive Trigger",
      "type": "n8n-nodes-base.googleDriveTrigger",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "functionCode": "return items.map(item => {\n  const webViewLink = item.json.webViewLink;\n  const fileIdMatch = webViewLink.match(/\\/d\\/(.*?)\\//);\n  if (fileIdMatch && fileIdMatch[1]) {\n    item.json.downloadUrl = `https://drive.google.com/uc?id=${fileIdMatch[1]}&export=download`;\n  }\n  return item;\n});"
      },
      "name": "Generate Download URL",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "url": "={{$json[\"downloadUrl\"]}}",
        "responseFormat": "file",
        "options": {
          "download": true,
          "binaryPropertyName": "data"
        }
      },
      "name": "HTTP Download",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 2,
      "position": [700, 300]
    },
    {
      "parameters": {
        "fromEmail": "SEU_EMAIL@gmail.com",
        "toEmail": "DESTINATARIO@gmail.com",
        "subject": "Arquivo recebido do Drive",
        "text": "Segue em anexo o arquivo mais recente da pasta.",
        "attachmentsBinary": [
          {
            "binaryProperty": "data",
            "fileName": "={{$json[\"name\"]}}"
          }
        ]
      },
      "name": "Send Gmail",
      "type": "n8n-nodes-base.gmail",
      "typeVersion": 1,
      "position": [950, 300]
    }
  ],
  "connections": {
    "Drive Trigger": {
      "main": [
        [
          {
            "node": "Generate Download URL",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Download URL": {
      "main": [
        [
          {
            "node": "HTTP Download",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "HTTP Download": {
      "main": [
        [
          {
            "node": "Send Gmail",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  ]
}
